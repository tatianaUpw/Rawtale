<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <File  name="RollingFileAppender" fileName="log\${sys:logfilename}.txt">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss} %p %m %ex%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="RollingFileAppender"/>
        </Root>
    </Loggers>
</Configuration>